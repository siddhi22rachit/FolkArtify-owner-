generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model PostDetail {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  desc     String
  quality  String?
  category Category
  size     Int?
  post     Post     @relation(fields: [postId], references: [id])
  postId   String   @unique @db.ObjectId
}

enum Category {
  cloths
  furniture
  wall_decor
}

model Post {
  id         String      @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  price      Int
  images     String[]
  address    String
  latitude   String
  longitude  String
  city       String
  rate       Int
  type       Type
  createdAt  DateTime    @default(now())
  postDetail PostDetail?
}

enum Type {
  buy
  rent
}
